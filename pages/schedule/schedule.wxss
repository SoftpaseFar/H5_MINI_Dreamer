.x {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 0;
  right: 10rpx;
  font-weight: bolder;
  color: #000;
}
input{
  border-bottom: 3rpx solid rgba(0, 0, 0, 0.1)
}

button{
  display: flex;
  height: 70rpx;
