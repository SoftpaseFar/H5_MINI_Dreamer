.container {
  font-family: "Microsoft YaHei";
  font-size: 15px;
  color: rgba(81, 140, 254, 1);
  background: rgba(243, 242, 241, 0.9);
  width: 100%;
  height: auto;
  position: relative;
  
}

.header {
  width: 100%;
  height: 100rpx;
}

.header view{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 117rpx;
  width: 200rpx;
  height: 56rpx;
  float: left;
  text-align: center;
  align-items: center;
  flex-direction: row;
  align-content: center;
  align-self: center;
  background: rgba(81, 140, 254, 1);
  /*border: 1rpx solid rgba(81, 140, 254, 1);*/
  /*color: rgba(0, 0, 0, 0.7)*/
  color: rgba(255, 255,255, 0.7)
}

.top-left {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-weight: bolder;
  text-align: center;
  float: left;
  color: #000;
  font-size: 25px;
}

.top {
  display: flex;
  height: 50rpx;
  width: 756rpx;
}

.top-item {
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 50rpx;
  margin-left: 5rpx;
}

.left {
  width: 50rpx;
  height: auto;
  
}

.left-item {
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

.line {
  position: absolute;
  top: 150rpx;
  width: 100%;
  height: auto;
}

.line-item {
  width: 100%;
}

.course {
  position: absolute;
  top: 150rpx;
  height: 1200rpx;
  left: 50rpx;
  width: 700rpx;
}

.course-item {
  position: absolute;
  width: 96rpx;
  border-radius: 5px;
  margin-right: 2rpx;
  overflow: hidden;
  font-size: 8pt;
  font-weight: bolder;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
  align-items: center;
  flex-direction: row;
  display: flex;
}

.conceal {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
}

