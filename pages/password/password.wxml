<view class="container">  
<form bindsubmit="submit">
  <view class="login-from">  
    <!--账号-->  
    <view class="inputView">  
      <image class="nameImage" src="/static/images/icon/specialty.png"></image>  
      <label class="loginLab">新密码</label>  
      <input class="inputText" name="newPassword" password="true" placeholder="输入新密码" bindinput="phoneInput" />  
    </view>  
    <view class="line"></view>  
  
    <!--密码-->  
    <view class="inputView">  
      <image class="keyImage" src="/static/images/icon/specialty.png"></image>  
      <label class="loginLab">再次确认</label>  
      <input class="inputText" name="passwordAgain" password="true" placeholder="确认新密码" bindinput="passwordInput" />  
    </view>  
  
    <!--按钮-->  
    <view class="loginBtnView">  
      <button class="submit" formType="submit">确认修改</button>
    </view>  
  </view>  
  </form>
</view>  