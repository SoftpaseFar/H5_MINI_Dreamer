<view class="container">  
<form bindsubmit="login">
  <view class="login-icon">  
    <image class="login-img" src="/imgs/login/background.png"></image>  
  </view>  
  <view class="login-from">  
  
    <!--账号-->  
    <view class="inputView">  
      <image class="nameImage" src="/imgs/login/username.png"></image>  
      <label class="loginLab">学号：</label>  
      <input name="username" class="inputText" placeholder="请输入学号" bindinput="phoneInput" />  
    </view>  
    <view class="line"></view>  
  
    <!--密码-->  
    <view class="inputView">  
      <image class="keyImage" src="/imgs/login/password.png"></image>  
      <label class="loginLab">密码：</label>  
      <input name="password" class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" />  
    </view>  
  
    <!--按钮-->  
    <view class="loginBtnView">  
      <button class="loginBtn"  formType="submit">登录</button>  
    </view>  
  </view>  
  </form>
</view>  